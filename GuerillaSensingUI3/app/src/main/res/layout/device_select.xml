<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    android:background="#fffafafa"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:id="@+id/device_select_item_picture"
            android:src="@drawable/poly"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/device_select_item_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Device Name"
            android:gravity="center_vertical"
            android:textColor="@color/top_bars_base"
            android:textSize="14dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/device_select_item_picture"
            android:layout_marginTop="14dp"
            android:layout_marginStart="14dp" />

        <TextView
            android:id="@+id/device_select_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Creation"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:layout_below="@+id/device_select_item_version"
            android:layout_alignStart="@+id/device_select_item_version"
            android:layout_marginTop="18dp" />

        <TextView
            android:id="@+id/device_select_item_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:layout_below="@+id/device_select_item_name"
            android:layout_alignStart="@+id/device_select_item_name"
            android:layout_marginTop="14dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>