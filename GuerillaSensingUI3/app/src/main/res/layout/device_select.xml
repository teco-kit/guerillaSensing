<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="10dp"
    android:layout_margin="13dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/device_select_item_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@android:color/holo_red_dark"
            android:text="contact det"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/device_select_item_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/device_select_item_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp" />

        <TextView
            android:id="@+id/device_select_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toEndOf="@+id/device_select_item_version" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_select_item_picture"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/device_select_item_version"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>